{
  "name": "vs-search-everything",
  "displayName": "Search Everything",
  "description": "Search Everything like in IntelliJ, support massive codebases",
  "version": "0.0.1",
  "publisher": "devpushing",
  "repository": {
    "type": "git",
    "url": "https://github.com/devpushing/vs-search-everything"
  },
  "bugs": {
    "url": "https://github.com/devpushing/vs-search-everything/issues"
  },
  "homepage": "https://github.com/devpushing/vs-search-everything#readme",
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "search",
    "find",
    "symbols",
    "files",
    "navigation",
    "intellij",
    "search everywhere",
    "trigram"
  ],
  "activationEvents": [
    "onCommand:searchEverything.search",
    "onCommand:searchEverything.refreshIndex"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "searchEverything.search",
        "title": "Search Everything: Search",
        "category": "Search"
      },
      {
        "command": "searchEverything.refreshIndex",
        "title": "Search Everything: Reset Index",
        "category": "Search"
      }
    ],
    "keybindings": [
      {
        "command": "searchEverything.search",
        "key": "ctrl+shift+f",
        "mac": "cmd+shift+f",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Search Everything",
      "properties": {
        "searchEverything.includeSymbols": {
          "type": "boolean",
          "default": true,
          "description": "Include symbols in search results"
        },
        "searchEverything.includeFiles": {
          "type": "boolean",
          "default": true,
          "description": "Include files in search results"
        },
        "searchEverything.maxResults": {
          "type": "number",
          "default": 50,
          "description": "Maximum number of results to display"
        },
        "searchEverything.excludePatterns": {
          "type": "array",
          "default": [
            "**/node_modules/**",
            "**/.git/**"
          ],
          "description": "Glob patterns to exclude from search"
        },
        "searchEverything.debounceDelay": {
          "type": "number",
          "default": 100,
          "minimum": 10,
          "maximum": 1000,
          "description": "Delay in milliseconds before executing search after typing stops"
        },
        "searchEverything.debugMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        },
        "searchEverything.trigramCaseSensitive": {
          "type": "boolean",
          "default": false,
          "description": "Enable case-sensitive matching for trigram search"
        },
        "searchEverything.trigramMinLength": {
          "type": "number",
          "default": 3,
          "minimum": 2,
          "maximum": 5,
          "description": "Minimum query length for trigram search"
        },
        "searchEverything.enableCamelCaseMatching": {
          "type": "boolean",
          "default": true,
          "description": "Enable CamelCase matching (e.g., 'gUN' matches 'getUserName')"
        },
        "searchEverything.trigramStoragePath": {
          "type": "string",
          "default": "",
          "description": "Custom path for trigram index storage (empty for default location)"
        },
        "searchEverything.trigramBatchSize": {
          "type": "number",
          "default": 20000,
          "minimum": 100,
          "maximum": 100000,
          "description": "Number of operations to batch before committing to database (higher = faster but uses more memory)"
        },
        "searchEverything.storageType": {
          "type": "string",
          "enum": ["sqlite", "memory"],
          "default": "sqlite",
          "description": "Storage type for trigram index (sqlite: persistent, memory: faster but volatile)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "npm run compile && node ./out/test/trigramUtils.standalone.test.js",
    "test:full": "npm run compile && mocha ./out/test/**/*.test.js",
    "benchmark": "npm run compile && node ./out/benchmarks/standaloneBenchmark.js",
    "package": "npm run compile && npx vsce package",
    "build:package": "npm run compile && npx vsce package",
    "publish:local": "npm run package"
  },
  "dependencies": {
    "sql.js": "^1.8.0"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3",
    "@vscode/vsce": "^2.24.0"
  }
}
